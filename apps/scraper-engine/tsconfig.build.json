{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@repo/jobs": [
                "../../packages/jobs/src"
            ],
            "@repo/logger": [
                "../../packages/logger/src"
            ]
        },
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}